/* pages/lookgoods/lookgoods.wxss */
.lookgoods {
  background: #f2f2f2;
}
.lookgoods .banner {
  background: white;
}
.lookgoods .banner .bannerImg {
  width: 100%;
  height: 300rpx;
}
.lookgoods .optionBar {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: white;
}
.lookgoods .optionBar .option {
  flex: 1;
  text-align: center;
  position: relative;
}
.red {
  color: red;
}
.lookgoods .optionBar .option .van-icon {
  color: #969696;
}
.lookgoods .optionBar .option .up {
  position: absolute;
  top: 2rpx;
  margin-left: 4rpx;
}
.lookgoods .optionBar .option .down {
  position: absolute;
  bottom: 0;
  margin-left: 4rpx;
}
.lookgoods .inner {
  margin-top: 20rpx;
}
.lookgoods .inner .scrollset {
  height: 1000rpx;
}
.lookgoods .inner .goodsList {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.lookgoods .inner .goodsList .item {
  width: 49.5%;
  background: white;
  margin-top: 4rpx;
  text-align: center;
}
.lookgoods .inner .goodsList .pic {
  width: 100%;
  height: 300rpx;
}
.lookgoods .inner .goodsList .item .name {
  padding: 0 10rpx;
  white-space: nowrap; 
  overflow: hidden; 
  text-overflow: ellipsis;
}
.lookgoods .inner .goodsList .item .price {
  font-size: 26rpx;
  color: red;
  padding: 10rpx 0;
}