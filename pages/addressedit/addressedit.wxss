/* pages/addressedit/addressedit.wxss */
.addressedit .form {
  padding: 0 20rpx;
}
.addressedit .weui-input {
  padding: 20rpx;
  border-bottom: 2rpx solid #f2f2f2;
}
.addressedit .operation {
  display: flex;
  padding: 60rpx 40rpx;
  justify-content: space-between;
  align-items: center;
  height: 60rpx;
}
.addressedit .operation .left {
  display: flex;
  align-items: center;
}
.addressedit .operation .left .img {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.addressedit .operation .right {
  display: flex;
  color: green;
  align-items: center;
} 
.addressedit .operation .right .van-icon {
  margin-left: 10rpx;
}
.addressedit .bottom {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background: red;
  color: white;
  text-align: center;
  line-height: 100rpx;
}