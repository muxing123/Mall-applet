/* pages/categorynav/categorynav.wxss */
.categorynav {
  background: #f2f2f2;
}
.categorynav .scroll-view_H {
  background: white;
}
.categorynav .scroll-view_H .subListLoop {
  white-space: nowrap;
  padding: 0 20rpx;
}
.categorynav .scroll-view_H .subListLoop .item {
  display: inline-block;
  text-align: center;
  padding: 16rpx 26rpx;
  margin-left: 20rpx; 
}
.red {
  color: red;
  border-bottom: 6rpx solid red;
  background: #f2f2f2;
}
.categorynav .inner {
  margin-top: 20rpx;
}
.categorynav .inner .titleBar {
  text-align: center;
  background: white;
}
.categorynav .inner .titleBar .name {
  font-weight: bold;
  font-size: 30rpx;
  padding: 20rpx 0;
}
.categorynav .inner .titleBar .desc {
  color: #969696;
  font-size: 26rpx;
  padding-bottom: 20rpx;
}
.categorynav .inner .scrollset {
  height: 970rpx;
}
.categorynav .inner .goodsList {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.categorynav .inner .goodsList .item {
  width: 49.5%;
  background: white;
  margin-top: 4rpx;
  text-align: center;
}
.categorynav .inner .goodsList .pic {
  width: 100%;
  height: 300rpx;
}
.categorynav .inner .goodsList .item .name {
  white-space: nowrap; 
  overflow: hidden; 
  text-overflow: ellipsis;
}
.categorynav .inner .goodsList .item .price {
  font-size: 26rpx;
  color: red;
  padding: 10rpx 0;
}